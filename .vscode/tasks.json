{
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "gcc",
            "args": [
                "-g",
                "${workspaceFolder}/Fonction.c",
                "${workspaceFolder}/main.c",
                "-o",
                "${workspaceFolder}/myprogram"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}
